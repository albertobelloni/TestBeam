 # Here is a very simple submission script

universe = vanilla

Executable = condor_fits.sh

getenv = True

notify_user = abelloni@umd.edu
notification = always

on_exit_hold = (ExitBySignal == False) && (ExitCode != 0)
periodic_release = NumJobStarts<30 && ((CurrentTime - EnteredCurrentStatus) > 10)

Should_Transfer_Files = NO

Requirements = TARGET.FileSystemDomain == "privnet"

Output = $(Process).stdout
Error  = $(Process).stderr
Log    = $(Process).log

Arguments  = $(Process)

Queue 8
